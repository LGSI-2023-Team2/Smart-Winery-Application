<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="300dp"
    android:layout_height="348dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@drawable/popup_border"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="160dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_height="50dp">
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/scan_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="여자랑 먹으면 쥰내 맛있는 와인"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/scan_image"
            android:layout_width="42dp"
            android:layout_height="170dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/wine1" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="110dp"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="11dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당도"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="8dp"
                        />
                    <ImageView
                        android:id="@+id/sweet_level"
                        android:layout_width="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="11dp"
                        android:background="@drawable/level5"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="11dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="산미"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="8dp"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:id="@+id/sour_level"

                        android:layout_marginLeft="10dp"
                        android:layout_height="11dp"
                        android:background="@drawable/level4"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="11dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바디"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="8dp"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:id="@+id/body_level"

                        android:layout_marginLeft="10dp"
                        android:layout_height="11dp"
                        android:background="@drawable/level3"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="11dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="타닌"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="8dp"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:id="@+id/tanin_level"

                        android:layout_marginLeft="10dp"
                        android:layout_height="11dp"
                        android:background="@drawable/level2"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="110dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="아로마"
                    android:textSize="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/aroma1"
                        android:background="@drawable/aroma_berry"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/aroma2"
                        android:background="@drawable/aroma_apple"
                        android:layout_marginRight="10dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/aroma3"
                        android:background="@drawable/aroma_croissant"
                        android:layout_marginRight="10dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/aroma4"
                        android:background="@drawable/aroma_herbal"
                        android:layout_height="30dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="80dp"
        android:background="@drawable/popup_footer_border"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/grey_button"
            android:text="Take wine"
            android:padding="0dp"

            android:layout_marginRight="30dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/grey_button"
            android:text="Reserve"
            android:padding="0dp"

            />
    </LinearLayout>
</LinearLayout>