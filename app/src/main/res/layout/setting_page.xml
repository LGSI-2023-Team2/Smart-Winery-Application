<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="410dp"
    android:layout_height="730dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="@color/red_wine"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:text="Settings"
        android:textStyle="bold"
        >
    </TextView>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_marginTop="50dp"
        android:layout_height="480dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="160dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Floor"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="RED"
                    android:textStyle="bold"
                    android:backgroundTint="@color/red_wine"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="160dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd Floor"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="WHITE"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white_wine"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="160dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Floor"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="SPARKLE"
                    android:textStyle="bold"
                    android:backgroundTint="@color/sparkle_wine"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>